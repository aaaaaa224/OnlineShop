@using PagedList.Mvc;
@using PagedList;
@model IPagedList<Models.Entity.TinTuc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<div class="col-sm-9">
    <div class="blog-post-area">
        <h2 class="title text-center">Trang tin tức</h2>
        @foreach (var item in Model)
        {
            <div class="single-blog-post">
                <h3>@item.ten</h3>
                <div class="post-meta">
                    <ul>
                        <li><i class="fa fa-user"></i> Thái Trần</li>
                        <li><i class="fa fa-clock-o"></i>@System.DateTime.Today</li>
                    </ul>
                    <span>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-half-o"></i>
                    </span>
                </div>
                <a href="">
                    <img src="@Url.Content("/Photo/"+@item.linkanh)"alt="">
                </a>
                <p>@item.mota.Substring(0,50).....</p>
                <a class="btn btn-primary" href="/TinTuc/Detail/@item.ma">Đọc thêm</a>
            </div>
        }
        <br />
        @Html.PagedListPager(Model, page => @Url.Action("Index", new { page }))
    </div>
</div>

