@using PagedList.Mvc;
@using PagedList;
@using Models.Entity;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@section quangcao{
    <div class="shipping text-center">
        <!--shipping-->
        <img src="~/Content/images/home/shipping.jpg" alt="" />
    </div><!--/shipping-->

}
@section slide{
    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">
                                <div class="col-sm-6">
                                    <h1><span>E</span>-SHOPPER</h1>
                                    <h2>Free E-Commerce Template</h2>
                                    <p>Luôn Mang lại những sản phẩm tốt nhất cho người tiêu dùng trên toàn thế giới. </p>
                                    <button type="button" class="btn btn-default get">Get it now</button>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/Content/images/home/girl1.jpg" class="girl img-responsive" alt="" />
                                    <img src="~/Content/images/home/pricing.png" class="pricing" alt="" />
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-sm-6">
                                    <h1><span>E</span>-SHOPPER</h1>
                                    <h2>100% Responsive Design</h2>
                                    <p>Luôn Mang lại những sản phẩm tốt nhất cho người tiêu dùng trên toàn thế giới. </p>
                                    <button type="button" class="btn btn-default get">Get it now</button>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/Content/images/home/girl2.jpg" class="girl img-responsive" alt="" />
                                    <img src="~/Content/images/home/pricing.png" class="pricing" alt="" />
                                </div>
                            </div>

                            <div class="item">
                                <div class="col-sm-6">
                                    <h1><span>E</span>-SHOPPER</h1>
                                    <h2>Free Ecommerce Template</h2>
                                    <p>Luôn Mang lại những sản phẩm tốt nhất cho người tiêu dùng trên toàn thế giới. </p>
                                    <button type="button" class="btn btn-default get">Get it now</button>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/Content/images/home/girl3.jpg" class="girl img-responsive" alt="" />
                                    <img src="~/Content/images/home/pricing.png" class="pricing" alt="" />
                                </div>
                            </div>

                        </div>

                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </section><!--/slider-->
}

<div class="features_items">
    <h2 class="title text-center">Sản phẩm mới</h2>
    @foreach (var item in (IEnumerable<SanPham>)ViewBag.sanphammoi)
    {
        <div class="col-sm-3">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <img src="/Content/images/product-details/new.jpg" class="newarrival" alt="" style="width:44px;height:22px;" />
                        <a href="/SanPham/ChiTietSp/?masanpham=@item.masanpham"><img src="@Url.Content("/Photo/" + @item.linkanh)" style="width:184px;height:162px;" alt="Chưa có ảnh" /></a>
                        <h2>@item.giaban vnd</h2>
                        <p>@item.tensanpham</p>
                        <a href="/ShopingCart/AddItem/@item.masanpham" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào rỏ hàng</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div><!--features_items-->
<div>@Html.ActionLink("Nhiều hơn nữa", "SanPhamTheoUuTien","SanPham",new { id=3},new { @class="btn"})</div>

<div class="features_items">
    <h2 class="title text-center">Danh sách sản phẩm</h2>
    @foreach (var item in (IEnumerable<SanPham>)ViewBag.danhsachsanpham)
    {
        <div class="col-sm-3">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        @if (@item.uutien == 3)
                        {
                            <img src="/Content/images/product-details/new.jpg" class="newarrival" alt="" style="width:44px;height:22px;" />}
                        @if (@item.uutien == 2)
                        {
                            <img src="/Content/images/home/sale.png" class="newarrival" alt="" style="width:42px;height:42px;" />
                        }
                        <a href="/SanPham/ChiTietSp/?masanpham=@item.masanpham"><img src="@Url.Content("/Photo/" + @item.linkanh)" style="width:184px;height:162px;" alt="Chưa có ảnh" /></a>
                        <h2>@item.giaban vnd</h2>
                        <p>@item.tensanpham</p>
                        <a href="/ShopingCart/AddItem/@item.masanpham" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào rỏ hàng</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>
@Html.PagedListPager((IPagedList<SanPham>)ViewBag.danhsachsanpham, page => @Url.Action("Index", new { page }))
